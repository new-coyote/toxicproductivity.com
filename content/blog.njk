                <div class="prose-sm">{{ post.date.toLocaleDateString('us-EN', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) }}</div>
                {{ post.data.excerpt | safe }}
                <div>

                </div>
            </div>
        </article>
    {% endfor %}
</div>
